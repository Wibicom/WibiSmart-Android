<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">


    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/ic_bluetooth_black_24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/text_margin" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imageView"
        android:text="Title"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#82000000"
        android:text="Description"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/text_margin"
        android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/scanner_item_status"
            android:textColor="@color/colorAccent"
            android:singleLine="true"
            android:layout_marginEnd="42dp"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/overflow_menu_button"
            android:layout_margin="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete_forever_black_24dp"
            android:id="@+id/overflow_menu_button"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
