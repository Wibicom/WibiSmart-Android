<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp">

        <TextView
            android:id="@+id/dashboard_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#82000000"
            android:text="Description"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/dashboard_item_char_1"
            android:layout_below="@+id/dashboard_item_char_2"
            android:layout_alignStart="@+id/dashboard_item_char_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/dashboard_item_char_2"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/dashboard_item_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Service"
            android:id="@+id/dashboard_item_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/bright_foreground_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Characteristics"
            android:id="@+id/textView11"
            android:textColor="@color/bright_foreground_material_light"
            android:textSize="15dp"
            android:layout_below="@+id/dashboard_service"
            android:layout_alignEnd="@+id/dashboard_item_char_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/dashboard_item_char_3"
            android:layout_below="@+id/dashboard_item_char_1"
            android:layout_alignStart="@+id/dashboard_item_char_1" />


    </RelativeLayout>

</android.support.v7.widget.CardView>