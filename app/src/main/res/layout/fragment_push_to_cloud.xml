<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wibicom.wibeacon3.FragmentPushToCloud">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:layout_gravity="center">
\

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_cloud_queue_black_24px"
                    android:clickable="true"
                    android:layout_margin="16dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push to cloud"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/background_floating_material_dark"
                    android:layout_margin="16dp"
                    android:layout_alignParentLeft="true"/>

            </android.support.design.widget.CoordinatorLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Push to cloud sends all the sensors data of your connected devices to the WibiSmart web app in real time. You can see it at www.wibismart.com"
                android:textSize="15dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="5dp"
                android:typeface="normal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0.70" />

            <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:layout_marginBottom="5dp">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activate push to cloud  "
                    android:id="@+id/switch_cloud"
                    android:layout_marginLeft="16dp"
                    android:checked="false"
                    android:layout_marginTop="5dp" />

                <Button
                    android:layout_width="64dp"
                    android:layout_height="26dp"
                    android:text="Ok"
                    android:id="@+id/button_ok"
                    android:layout_gravity="right"
                    android:background="@null"
                    style="?android:attr/borderlessButtonStyle"
                    android:nestedScrollingEnabled="false"
                    android:onClick="onOkButtonPressed" />

            </android.support.design.widget.CoordinatorLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="571dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView8"
        android:layout_gravity="center_horizontal|top"
        android:background="#b4000000" />

</FrameLayout>
